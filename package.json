{
  "name": "pixeldeck",
  "version": "0.0.1",
  "main": "lib/index.js",
  "description": "A 2d virtual environment",
  "homepage": "https://badquanta.github.io/pixeldeck/",
  "bugs": {
    "url": "https://github.com/badquanta/pixeldeck/labels/bug"
  },
  "keywords": [
    "multiplayer",
    "game-engine",
    "2d",
    "web-browser",
    "web-service"
  ],
  "directories": {
    "lib": "lib/",
    "bin": "bin/",
    "man": "man/",
    "doc": "docs/",
    "test": "test/",
    "res": "res/",
    "config": "config/"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "package.json"
  ],
  "bin": {
    "pixeldeck": "./bin/pixeldeck.js"
  },
  "man": [
    "man/pixeldeck.1"
  ],
  "scripts": {
    "test": "DEBUG=pixeldeck* mocha",
    "diagnostics": "nodemon --exec npm -- run test",
    "start": "DEBUG=\"*\" bin/pixeldeck.js",
    "start-watch": "DEBUG='*' nodemon --exec npm start",
    "docs": "npm run doc-html && npm run doc-man",
    "cover": "npx nyc mocha | tee ./docs/COVERAGE.TXT",
    "doc-html": "npx jsdoc -c jsdoc.conf.json",
    "doc-man": "./scripts/updateMan.js ./docs/pixeldeck.md",
    "docs-watch": "nodemon --exec npm -- run docs"
  },
  "os": [
    "linux",
    "!win32",
    "!win64",
    "!darwin"
  ],
  "author": "BadQuanta",
  "license": "GPL-3.0",
  "nodemon": {
    "verbose": true,
    "watch": [],
    "ignore": [
      "*.db.json",
      "docs/pixeldeck",
      "man/"
    ],
    "ext": "js,md,json",
    "delay": "1000"
  },
  "nyc": {
    "include": [
      "lib/*",
      "scripts/*",
      "bin/*"
    ],
    "exclude": [
      "ARCHIVES/*",
      "docs/*"
    ],
    "skip-full": true,
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "report-dir": "docs/coverage",
    "all": true
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chai": "^4.2.0",
    "config": "^3.2.2",
    "datauri": "^2.0.0",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "jstransformer-markdown-it": "^2.1.0",
    "lokijs": "^1.5.7",
    "mocha": "^6.2.1",
    "pug": "^2.0.4",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "jsdoc": "^3.6.3",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1",
    "remark-man": "^6.0.0",
    "remark-parse": "^7.0.1",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "to-vfile": "^6.0.0",
    "unified": "^8.4.0"
  }
}
