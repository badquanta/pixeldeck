{
  "name": "pixeldeck",
  "version": "0.0.1",
  "main": "lib/index.js",
  "description": "A 2d virtual environment",
  "homepage": "https://badquanta.github.io/pixeldeck/",
  "bugs": {
    "url": "https://github.com/badquanta/pixeldeck/labels/bug"
  },
  "keywords": [
    "multiplayer",
    "game-engine",
    "2d",
    "web-browser",
    "web-service"
  ],
  "directories": {
    "lib": "lib/",
    "bin": "bin/",
    "man": "man/",
    "doc": "docs/",
    "test": "test/",
    "res": "res/",
    "config": "config/"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "package.json"
  ],
  "bin": {
    "pixeldeck": "./bin/pixeldeck.js"
  },
  "man": [
    "man/pixeldeck.1"
  ],
  "scripts": {
    "test": "NODE_ENV=test DEBUG=pixeldeck* mocha -b",
    "diagnostics": "nodemon --exec npm -- run test",
    "start": "DEBUG=\"pixeldeck*\" bin/pixeldeck.js",
    "start-watch": "nodemon --exec npm start",
    "docs": "npm run jsdoc && npm run doc-man && npm run cover",
    "cover": "NODE_ENV=test npx nyc mocha | tee ./docs/COVERAGE.TXT; npm run cover-badge",
    "cover-badge": "npx lcov-badge-generator ./docs/coverage/lcov.info -o ./docs/coverage.svg",
    "esdoc": "./node_modules/.bin/esdoc",
    "jsdoc": "./node_modules/.bin/jsdoc -c ./jsdoc.conf.json",
    "doc-man": "./scripts/updateMan.js ./docs/pixeldeck.md",
    "developer": "nodemon --exec npm run docs"
  },
  "os": [
    "linux",
    "!win32",
    "!win64",
    "!darwin"
  ],
  "author": "BadQuanta",
  "license": "GPL-3.0",
  "nodemonConfig": {
    "verbose": true,
    "watch": [
      "lib/*",
      "test/*",
      "package.json",
      "jsdoc.conf.json",
      ".eslintrc.js",
      "README.md"
    ],
    "ignore": [
      "*.db.json",
      "docs/*",
      "man/*"
    ],
    "ext": "js,md,json",
    "delay": "1000"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chai": "^4.2.0",
    "config": "^3.2.3",
    "datauri": "^2.0.0",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "jimp": "^0.8.4",
    "jstransformer-markdown-it": "^2.1.0",
    "knex": "^0.19.5",
    "lokijs": "^1.5.7",
    "mocha": "^6.2.1",
    "objection": "^1.6.11",
    "pug": "^2.0.4",
    "pug-sass-filter": "^1.0.2",
    "rw": "^1.3.3",
    "socket.io": "^2.3.0",
    "sqlite3": "^4.1.0"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jsdoc": "^3.6.3",
    "lcov-badge-generator": "^1.0.5",
    "nodemon": "^1.19.3",
    "nyc": "^14.1.1",
    "remark-man": "^6.0.0",
    "remark-parse": "^7.0.1",
    "should": "^13.2.3",
    "supertest": "^4.0.2",
    "to-vfile": "^6.0.0",
    "unified": "^8.4.1"
  }
}
